{
  "name": "skillstash",
  "version": "0.1.0",
  "type": "module",
  "description": "GitHub template repo that turns issues into production-ready agent skills through structured, automated workflows",
  "scripts": {
    "validate": "bun run scripts/lint/lint-skills.ts",
    "lint:md": "markdownlint-cli2 --config .markdownlint-cli2.jsonc",
    "lint:md:fix": "markdownlint-cli2 --config .markdownlint-cli2.jsonc --fix",
    "hooks:install": "bun run scripts/setup-git-hooks.ts",
    "postinstall": "bun run hooks:install"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.39.0",
    "markdownlint-cli2": "^0.14.0"
  }
}
